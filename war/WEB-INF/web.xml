<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- Servlets -->
  <servlet>
    <servlet-name>signInServlet</servlet-name>
    <servlet-class>bzb.gwt.planner.server.SignInServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>signInServlet</servlet-name>
    <url-pattern>/planner/signin</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>datastoreServlet</servlet-name>
    <servlet-class>bzb.gwt.planner.server.DatastoreServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>datastoreServlet</servlet-name>
    <url-pattern>/planner/save</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Planner.html</welcome-file>
  </welcome-file-list>

</web-app>
